{
    "name": "tripmate-back-end",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:cov": "vitest run --coverage",
        "test:mocha": "NODE_ENV=test mocha \"tests-mocha/**/*.test.js\" --timeout 8000 --require dotenv/config --file tests-mocha/setup.js",
        "test:mocha:watch": "NODE_ENV=test mocha \"tests-mocha/**/*.test.js\" --watch --timeout 8000 --require dotenv/config",
        "coverage:mocha": "c8 -r text -r html -r lcov npm run test:mocha"
    },
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "joi": "^17.12.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^7.0.0",
        "mongoose": "^9.0.0"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^4.0.8",
        "c8": "^10.1.3",
        "chai": "^6.2.1",
        "mocha": "^11.7.5",
        "mongodb-memory-server": "^10.4.1",
        "nodemon": "^3.1.11",
        "sinon": "^21.0.0",
        "supertest": "^7.1.4",
        "vitest": "^4.0.8"
    },
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
