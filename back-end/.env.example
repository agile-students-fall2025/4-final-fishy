# MongoDB Connection
# Use MongoDB Atlas connection string or local MongoDB URI
MONGODB_URI=mongodb://localhost:27017/tripmate

# Server Configuration
PORT=4000

# API Keys
# Get your OpenWeather API key from https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# JWT Secret for authentication
# Generate a strong random string for production
JWT_SECRET=your_jwt_secret_key_here

# Optional: Map data file path (leave empty for in-memory storage)
MAP_DATA_FILE=

# CORS Configuration (comma-separated list of allowed origins)
# For production, include your frontend URL (e.g., http://localhost:3000,https://yourdomain.com)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
